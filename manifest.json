{
    "manifest_version": 2,
    "name": "Tab Switcher",
    "version": "1.0",
    "description": "Switch to the next focused tab",
    "permissions": [
        "tabs"
    ],
    "browser_action": {},
    "commands": {
        "switch-to-next-tab": {
            "suggested_key": {
                "default": "Ctrl+Shift+Right"
            },
            "description": "Switch to the next focused tab"
        },
        "switch-to-previous-tab": {
            "suggested_key": {
                "default": "Ctrl+Shift+Left"
            },
            "description": "Switch to the previous focused tab"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    }
}